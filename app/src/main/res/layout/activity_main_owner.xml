<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner_dashboard.Main_Owner">

    <TextView
        android:id="@+id/heading_Home"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="40dp"
        android:shadowColor="#303030"
        android:text="Home"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Orders_Button"
        android:layout_width="213dp"
        android:layout_height="126dp"
        android:layout_marginTop="55dp"
        android:text="My Orders"
        android:background="@drawable/btn_background"
        app:layout_constraintBottom_toTopOf="@+id/Product_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_Home"
        app:layout_constraintVertical_bias="0.71" />

    <Button
        android:id="@+id/Product_Button"
        android:layout_width="213dp"
        android:layout_height="132dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:text="My Products"
        app:layout_constraintBottom_toTopOf="@+id/Add_New_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Orders_Button" />

    <Button
        android:id="@+id/Add_New_Button"
        android:layout_width="212dp"
        android:layout_height="138dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_background"
        android:text="Add New Product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Product_Button" />
</androidx.constraintlayout.widget.ConstraintLayout>